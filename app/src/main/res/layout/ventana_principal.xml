<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context=".MainActivity"
android:visibility="visible"
android:scaleType="centerCrop"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Remembrall "
    android:layout_centerInParent="true"
    android:textStyle="bold"
    android:textColor="#fff"
    android:textSize="36dp"/>

<TextView
    android:id="@+id/user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:textAppearance="?android:textAppearanceLarge"
    android:text="Nombre de usuario"
    android:textColor="#1836b1"
    android:textStyle="bold"
    android:textColorHint="#f5f50b"
    android:textSize="18sp"/>
<Button
    android:id="@+id/Con"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:textAppearanceLarge"
    android:text="Ver Todo"
    android:layout_above="@+id/bus_cons"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="36dp"
    android:textSize="20sp"/>
<Button
    android:id="@+id/Np"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:textAppearanceLarge"
    android:text="Nuevo Prestamo"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="36dp"
    android:textSize="18sp"
    android:onClick="checkingButtons"
    />
    <TextView
        android:id="@+id/bus_cons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Consulta"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ed_text"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"/>
    <Button
        android:id="@+id/btn_consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/ed_text"
        android:layout_marginLeft="24dp"/>
    <EditText
        android:id="@+id/ed_text"
        android:layout_width="190dp"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"/>




</RelativeLayout>