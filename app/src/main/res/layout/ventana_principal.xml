<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#F5F5F5"
    >


<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Remembrall "
    android:layout_centerHorizontal="true"
    android:layout_margin="20dp"
    android:textStyle="bold"
    android:textColor="#000"
    android:textSize="30dp"
    android:fontFamily="cursive"
    />

<ImageButton
    android:id="@+id/Np"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="36dp"
    android:src="@mipmap/hand"
    android:layout_below="@+id/title"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#980000"
        android:fontFamily="casual"
        android:text="P r e s t a r"
        android:layout_toRightOf="@id/Np"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:id="@+id/textView" />

    <ImageButton
        android:id="@+id/btn_consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="@android:color/transparent"
        android:layout_below="@+id/Np"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="36dp"
        android:src="@mipmap/prestamos"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#980000"
            android:fontFamily="casual"
            android:text="P r e s t a m o s"
            android:layout_alignBottom="@+id/btn_consultar"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

    <ImageView
        android:id="@+id/lupita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="30dp"
        android:src="@mipmap/ic_launcher2"/>
    <TextView
        android:id="@+id/Random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/lupita"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="#980000"
        android:maxLines="4"
        android:lines="4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="Follow your Dreams"/>


</RelativeLayout>
    </ScrollView>