<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <Button
            android:id="@+id/consul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="Consulta"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:onClick="onClick"/>
    
        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:hint="Nombre"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_alignLeft="@+id/produ"
            android:layout_alignStart="@+id/produ"
            android:layout_alignRight="@+id/produ"
            android:layout_alignEnd="@+id/produ" />

        <EditText
            android:id="@+id/produ"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/consul"
            android:hint="Por producto"/>


    <ListView
        android:id="@+id/Lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/produ">

    </ListView>

</RelativeLayout>