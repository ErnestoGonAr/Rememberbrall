<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F5F5F5"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/title"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="55dp"
        android:fontFamily="cursive"
        android:text="Nuevo Prestamo "
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Nombre"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:textColor="#980000"
        android:text="Persona"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Producto"
        android:text="Objeto"
        android:textSize="20sp"
        android:textColor="#980000"
        android:fontFamily="casual"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Nombre"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Carac"
        android:text="DescripciÃ³n"
        android:textSize="20sp"
        android:fontFamily="casual"
        android:textColor="#980000"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Producto"
        />

    <EditText
        android:id="@+id/n"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/Nombre"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/Nombre"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Nombre"
        />
    <EditText
        android:id="@+id/p"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/Producto"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/Producto"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Producto" />

    <EditText
        android:id="@+id/c"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/Carac"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/Carac"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Carac" />



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/Carac"
        tools:context=".MainActivity" >


        <EditText
            android:id="@+id/etxt_todate"
            android:singleLine="true"
            android:editable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:textColorHint="#980000"
            android:fontFamily="casual"
            android:hint="@string/to_date" />
        <View
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:gravity=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:background="@android:color/transparent"
            android:fontFamily="casual"
            android:textSize="15sp"
            android:text="I N S E R T A R "
            android:id="@+id/OKButton"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="insertar"
            />
    </LinearLayout>



</RelativeLayout>
    </ScrollView>